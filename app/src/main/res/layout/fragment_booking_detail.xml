<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/drawable_shape_1"
    android:backgroundTint="@color/white"
    tools:context=".myapplication.Admin.Booking.BookingDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_gravity="bottom"
        android:elevation="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topbar3"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center_horizontal|left"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Chi tiết lịch hẹn"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnDeleteBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F5F5F5"
                android:text="Xóa"
                android:textColor="#666464"
                app:cornerRadius="20dp"
                app:strokeColor="#4D262626"
                app:strokeWidth="1dp" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:paddingBottom="32dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="ID booking"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edtBookingId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:background="@drawable/container_text_field1"
                        android:backgroundTint="@color/white"
                        android:cursorVisible="false"
                        android:elevation="4dp"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="ID "
                        android:inputType="text"
                        android:minHeight="50dp"
                        android:padding="10dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Họ tên"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edtCusName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:background="@drawable/container_text_field1"
                        android:backgroundTint="@color/white"
                        android:drawableStart="@drawable/baseline_person_24"
                        android:drawablePadding="10dp"
                        android:elevation="4dp"
                        android:ems="10"
                        android:focusableInTouchMode="false"
                        android:hint="Tên khách"
                        android:inputType="text"
                        android:minHeight="50dp"
                        android:padding="10dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Email"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edtCusEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:background="@drawable/container_text_field1"
                        android:backgroundTint="@color/white"
                        android:drawableStart="@drawable/baseline_email_24"
                        android:drawablePadding="10dp"
                        android:elevation="4dp"
                        android:ems="10"
                        android:focusableInTouchMode="false"
                        android:hint="Email"
                        android:inputType="text|textEmailAddress"
                        android:minHeight="50dp"
                        android:padding="10dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Số điện thoại"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edtCusPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:background="@drawable/container_text_field1"
                        android:backgroundTint="@color/white"
                        android:drawableStart="@drawable/baseline_local_phone_24"
                        android:drawablePadding="10dp"
                        android:elevation="4dp"
                        android:ems="10"
                        android:focusableInTouchMode="false"
                        android:hint="Số điện thoại"
                        android:inputType="number"
                        android:minHeight="50dp"
                        android:padding="10dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Địa điểm thu gom"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edtAddressCollect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:background="@drawable/container_text_field1"
                        android:backgroundTint="@color/white"
                        android:drawableStart="@drawable/baseline_map_24"
                        android:drawablePadding="10dp"
                        android:elevation="4dp"
                        android:ems="10"
                        android:focusableInTouchMode="false"
                        android:hint="Địa điểm thu gom"
                        android:inputType="text|textLongMessage"
                        android:minHeight="50dp"
                        android:padding="10dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Các loại thu gom"
                        android:textSize="18sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCategories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Ngày đặt"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edtDateBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:background="@drawable/container_text_field1"
                        android:backgroundTint="@color/white"
                        android:drawableEnd="@drawable/baseline_date_range_24"
                        android:elevation="4dp"
                        android:ems="10"
                        android:focusableInTouchMode="false"
                        android:hint="Ngày book"
                        android:inputType="datetime|date"
                        android:minHeight="50dp"
                        android:padding="10dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Ngày hẹn thu gom"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edtDateAppointment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:background="@drawable/container_text_field1"
                        android:backgroundTint="@color/white"
                        android:drawableEnd="@drawable/baseline_date_range_24"
                        android:elevation="4dp"
                        android:ems="10"
                        android:focusableInTouchMode="false"
                        android:hint="Hẹn ngày thu"
                        android:inputType="datetime"
                        android:minHeight="50dp"
                        android:padding="10dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Ảnh (nếu có)"
                        android:textSize="18sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvUserBookingListImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Trạng thái"
                        android:textSize="18sp" />

                    <AutoCompleteTextView
                        android:id="@+id/edtStatusBooking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="false"
                        android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
                        android:focusableInTouchMode="false"
                        android:text="Cập nhật trạng thái"
                        android:textColorLink="@color/green_btn" />

                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/btnUpdateBookingInfo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/green_btn"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Lưu chỉnh sửa"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:cornerRadius="20dp" />

    </LinearLayout>
</FrameLayout>