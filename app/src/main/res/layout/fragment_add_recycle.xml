<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:layout_gravity="bottom"
    android:background="@drawable/img_layout_sign_in"
    tools:context=".myapplication.Admin.Recycle.AddRecycleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:elevation="2dp"
        android:gravity="left|top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Nhập thông tin"
            android:textSize="30sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:paddingBottom="32dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Phân loại"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spinnerAddRecycleCategory"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:background="@drawable/container_text_field1"
                        android:backgroundTint="@color/white"
                        android:drawableRight="@drawable/baseline_arrow_drop_down_24"
                        android:elevation="4dp"
                        android:ems="10"
                        android:focusableInTouchMode="false"
                        android:hint="Chọn phân loại"
                        android:inputType="text"
                        android:minHeight="50dp"
                        android:padding="10dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Có phải tái chế?"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/edtAddIsRecycle"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:background="@drawable/container_text_field1"
                        android:backgroundTint="@color/white"
                        android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
                        android:elevation="4dp"
                        android:ems="10"
                        android:focusableInTouchMode="false"
                        android:hint="Nhấn chọn"
                        android:inputType="text"
                        android:minHeight="50dp"
                        android:padding="10dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Tên loại rác"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edtAddRecycleName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:background="@drawable/container_text_field1"
                        android:backgroundTint="@color/white"
                        android:elevation="4dp"
                        android:ems="10"
                        android:hint="Nhập tên"
                        android:inputType="text"
                        android:minHeight="50dp"
                        android:padding="10dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Thông tin chi tiết"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edtAddRecycleDetail"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:background="@drawable/container_text_field1"
                        android:backgroundTint="@color/white"
                        android:elevation="4dp"
                        android:ems="10"
                        android:hint="Nhập nội dung"
                        android:inputType="text|textLongMessage|textMultiLine"
                        android:minHeight="50dp"
                        android:padding="10dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Ảnh (nếu có)"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/imgAddRecycle"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/_981712_scaled" />

                    <Button
                        android:id="@+id/btnAddPictureRecycle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:backgroundTint="@color/white"
                        android:drawableEnd="@drawable/baseline_photo_library_24"
                        android:elevation="4dp"
                        android:ems="10"
                        android:gravity="left|center_vertical"
                        android:hint="Chọn ảnh"
                        android:inputType="text"
                        android:minHeight="50dp"
                        android:padding="10dp"
                        android:textSize="20sp"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnSaveRecycle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/green_btn"
            android:fontFamily="@font/nunito_extrabold"
            android:text="Thêm"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="20dp" />

    </LinearLayout>

</FrameLayout>