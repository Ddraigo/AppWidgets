<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ChangePassWord"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:elevation="2dp"
    android:orientation="vertical"
    tools:context=".myapplication.ChangePassWord">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_vector"
            android:layout_width="80dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:src="@drawable/img_vector" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/container_group5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:clipToPadding="false"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="top"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/agbalumo"
                android:gravity="top|left"
                android:includeFontPadding="true"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Đổi mật khẩu"
                android:textColor="#FF46C089"
                android:textSize="45sp" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <LinearLayout
            android:id="@+id/container_field_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtInputPass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/container_text_field1"
                android:drawableLeft="@drawable/baseline_lock_open_24"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:hint="Mật khẩu hiện tại"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColor="#837C7C"
                android:textColorHint="#B1ABAB"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/eidtTextErrorEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email không hợp lệ! Vui lòng thử lại"
                android:visibility="gone"
                tools:text="Email không hợp lệ! Vui lòng thử lại" />

            <EditText
                android:id="@+id/edtNewPassWord"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/container_text_field1"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="5dp"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Mật khẩu mới"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:textColor="#837C7C"
                android:textColorHint="#B1ABAB"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/editTextErrorPassWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mật khẩu không hợp lệ! Vui lòng thử lại"
                android:visibility="gone"
                tools:text="Mật khẩu không hợp lệ! Vui lòng thử lại" />

            <EditText
                android:id="@+id/edtRepeatPassWord"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/container_text_field1"
                android:drawableLeft="@drawable/baseline_lock_reset_24"
                android:drawablePadding="5dp"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Xác nhận lại mật khẩu mới"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:textColor="#837C7C"
                android:textColorHint="#B1ABAB"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/editTextErrorRepeatPassWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mật khẩu không khớp nhau! Vui lòng thử lại"
                android:visibility="gone"
                tools:text="Mật khẩu không khớp nhau! Vui lòng thử lại" />


        </LinearLayout>

        <Button
            android:id="@+id/btnSaveChangePass"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#47D392"
            android:gravity="center"
            android:text="ĐĂNG KÝ"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="8dp" />
    </LinearLayout>

</FrameLayout>